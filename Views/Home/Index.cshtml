@{
	ViewData["Title"] = "Home Page";
}
<div class="text-center">
	<h1 class="display-4">Best Youtube Downloader</h1>
	<form asp-controller="Home" asp-action="Details" method="get" class="my-5">
		<div class="form-floating mb-3">
			<input type="url" class="form-control" name="url" id="floatingInput" required
				placeholder="https://www.youtube.com/watch?v=xxxxxxxxxxx">
			<label for="floatingInput">Youtube Link</label>
		</div>
		<input type="submit" class="btn btn-primary" value="Get Details">
	</form>
	@if (TempData["Error"] != null)
	{
		<div class="alert alert-danger">
			@TempData["Error"]
		</div>
	}
</div>